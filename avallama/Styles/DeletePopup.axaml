<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:avallama.Controls">

    <!-- To preview this, right click on either ConversationItem or MessageItem in their own previews -->

    <!-- Style definitions for Delete popup -->
    <Style Selector="controls|DeletePopup Button">
        <Setter Property="BorderBrush" Value="{DynamicResource Error}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource OnError}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
</Styles>

