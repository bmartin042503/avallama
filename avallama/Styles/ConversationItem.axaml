<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:avallama.Controls"
        xmlns:dualTextItem="clr-namespace:avallama.Controls.DualTextItem">
    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource Surface}">
            <StackPanel Orientation="Vertical" Spacing="20">
                <dualTextItem:ConversationItem
                    Text="Generating one thousand lorem ipsum texts"
                    Width="300"
                    SubText="llama3.2"/>

                <dualTextItem:ConversationItem
                    Text="The perfect conversation"
                    Width="300"
                    SubText="deepseek-r1"/>

                <dualTextItem:ConversationItem
                    Text="Testing the model"
                    Width="300"
                    SubText="gpt-oss"/>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Base styles -->
    <Style Selector="dualTextItem|ConversationItem">
        <Setter Property="Background" Value="{DynamicResource SurfaceContainerHighest}"/>
        <Setter Property="TextColor" Value="{DynamicResource OnSurface}"/>
        <Setter Property="TextFontSize" Value="16"/>
        <Setter Property="SubTextColor" Value="{DynamicResource OnSurface}"/>
        <Setter Property="SubTextFontSize" Value="12"/>
        <Setter Property="SubTextAlignment" Value="End"/>
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="MaxLines" Value="1"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="Spacing" Value="12"/>
        <Setter Property="FontFamily" Value="{StaticResource Manrope}"/>
    </Style>

    <!-- Selected conversation item styles -->
    <Style Selector="dualTextItem|ConversationItem">
        <Setter Property="ActiveBackground" Value="{DynamicResource PrimaryContainer}"/>
        <Setter Property="ActiveTextColor" Value="{DynamicResource OnPrimaryContainer}"/>
        <Setter Property="ActiveSubTextColor" Value="{DynamicResource OnPrimaryContainer}"/>
    </Style>

    <!-- Hovered conversation item styles -->
    <Style Selector="dualTextItem|ConversationItem">
        <Setter Property="HoverBackground" Value="{DynamicResource SecondaryContainer}"/>
        <Setter Property="HoverTextColor" Value="{DynamicResource OnSecondaryContainer}"/>
        <Setter Property="HoverSubTextColor" Value="{DynamicResource OnSecondaryContainer}"/>
    </Style>
</Styles>

