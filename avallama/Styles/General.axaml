<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:avallama.Controls">

    <!-- Egyéb stílusdefiníciók, amiknek nincs értelme külön fájlt létrehozni -->

    <!-- Ezzel megadjuk hogy az IndexedItemsControl az ItemsControl-hoz hasonlóan jelenítse meg az elemeket -->
    <Style Selector="controls|IndexedItemsControl">
        <Setter Property="Template">
            <ControlTemplate>
                <ItemsPresenter/>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
