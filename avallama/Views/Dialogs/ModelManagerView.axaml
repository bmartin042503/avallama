<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:services="clr-namespace:avallama.Services"
             xmlns:vm="using:avallama.ViewModels"
             xmlns:controls="clr-namespace:avallama.Controls"
             xmlns:models="clr-namespace:avallama.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avallama.Views.Dialogs.ModelManagerView"
             x:DataType="vm:ModelManagerViewModel"
             Background="{DynamicResource Surface}">
    
    <!-- TODO: Ha nincs model megjelenítve akkor a kereső és a rendező mezők összehúzódnak, ezt kijavítani hogy maradjon egy a méret -->

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*,*" Margin="22">
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center"
                    HorizontalAlignment="Left">
            <TextBlock
                Text="{services:LocalizationService Key='MODEL_MANAGER'}" Classes="H2"
                Foreground="{DynamicResource OnSurface}" />
            <Button Command="{Binding ShowInfo}" Classes="svgButton">
                <controls:DynamicSvg Path="/Assets/Svg/info.svg" FillColor="{DynamicResource OnSurfaceVariant}"
                                     Width="20" />
            </Button>
        </StackPanel>
        <TextBlock Grid.Row="0" Grid.Column="2"
                   IsVisible="{Binding HasDownloadedModels}"
                   Text="{Binding DownloadedModelsInfo}"
                   Classes="H3" VerticalAlignment="Center" HorizontalAlignment="Right"
                   Foreground="{DynamicResource OnSurfaceVariant}" Opacity="0.6" />

        <!-- Bal oldali modelválasztó, kereső, rendező rész -->
        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,Auto,*" HorizontalAlignment="Left" Margin="0,20,0,0">

            <!-- Keresőmező -->
            <TextBox Grid.Row="0" Watermark="{services:LocalizationService Key='SEARCH_FOR_MODELS'}" MaxLines="1" Padding="16,8"
                     HorizontalAlignment="Stretch" Text="{Binding SearchBoxText}"
                     CornerRadius="8">
                <TextBox.InnerRightContent>
                    <controls:DynamicSvg Path="/Assets/Svg/search.svg" Width="16"
                                         Margin="0,0,12,1" StrokeColor="{DynamicResource OnSurfaceVariant}" />
                </TextBox.InnerRightContent>
            </TextBox>

            <!-- Rendező szöveg és rendező combobox -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Margin="0,12,0,0" HorizontalAlignment="Stretch">
                <TextBlock Grid.Column="0"
                           Text="{services:LocalizationService Key='ORDER_BY'}"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="{DynamicResource OnSurface}"
                           FontWeight="Bold" />
                <ComboBox Grid.Column="1" Margin="8,0,0,0"
                          SelectedIndex="1"
                          HorizontalAlignment="Stretch">
                    <ComboBoxItem>Size</ComboBoxItem>
                    <ComboBoxItem>Downloaded</ComboBoxItem>
                    <ComboBoxItem>Parameters</ComboBoxItem>
                </ComboBox>
            </Grid>

            <!-- Modelválasztó -->
            <ScrollViewer Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,14,0,0" AllowAutoHide="True" >
                <ItemsControl ItemsSource="{Binding Models}" VerticalAlignment="Stretch">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:OllamaModel">
                            <controls:ModelBlock
                                Margin="0,12,0,0"
                                Title="{Binding Name}"
                                DownloadStatus="{Binding DownloadStatus}"
                                DownloadProgress="{Binding DownloadProgress}"
                                SelectedName="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=((vm:ModelManagerViewModel)DataContext).SelectedModelName}"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=((vm:ModelManagerViewModel)DataContext).SelectModel}"
                                CommandParameter="{Binding Name}"
                                />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,10,0,0"
                Content="{services:LocalizationService Key='CLOSE'}"
                Command="{Binding Close}"
                Cursor="Hand" />
    </Grid>
</UserControl>