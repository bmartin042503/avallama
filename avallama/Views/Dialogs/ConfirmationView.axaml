<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="avallama.Views.Dialogs.ConfirmationView"
             Background="{DynamicResource Surface}">
    <StackPanel Orientation="Vertical" Margin="20">
        <TextBlock x:Name="DialogTitle" TextWrapping="Wrap" MaxWidth="400" Margin="0,10,0,0" Classes="H2" 
                   Text="Confirm dialog title"/>
        <StackPanel Orientation="Horizontal" Spacing="16">
            <Button HorizontalAlignment="Right" Content="Positive" x:Name="PositiveButton"
                    Margin="0,40,0,0" Cursor="Hand"/>
            <Button HorizontalAlignment="Right" Content="Negative" x:Name="NegativeButton"
                    Margin="0,40,0,0" Cursor="Hand"/>
        </StackPanel>
    </StackPanel>
</UserControl>
