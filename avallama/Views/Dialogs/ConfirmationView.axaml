<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="avallama.Views.Dialogs.ConfirmationView"
             Background="{DynamicResource Surface}">
    <StackPanel Orientation="Vertical" Margin="20">
        <TextBlock x:Name="DialogTitle" TextWrapping="Wrap" MaxWidth="400" Classes="H2"
                   Text="Confirm dialog title" />
        <TextBlock x:Name="DialogDescription" TextWrapping="Wrap" MaxWidth="400" Margin="0,12,0,0" Classes="H3"
                   Text="Confirm dialog description" Foreground="{DynamicResource Outline}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="16" Margin="0, 34, 0, 0">
            <Button Content="Positive" x:Name="PositiveButton" Cursor="Hand" />
            <Button Content="Negative" x:Name="NegativeButton" Cursor="Hand" />
        </StackPanel>
    </StackPanel>
</UserControl>