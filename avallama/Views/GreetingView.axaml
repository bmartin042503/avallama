<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:avallama.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:localization="clr-namespace:avallama.Services"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avallama.Views.GreetingView"
             x:DataType="vm:GreetingViewModel">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{localization:LocalizationService Key='GREETING_TEXT'}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="48"/>
            <TextBlock Text="{localization:LocalizationService Key='GREETING_SUBTEXT'}"
                       HorizontalAlignment="Center"
                       Opacity="0.7"
                       FontSize="18"></TextBlock>
            
            <Button CornerRadius="20"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    FontSize="16"
                    Padding="30,8"
                    IsEnabled="{Binding Path=((vm:MainViewModel)DataContext).OllamaProcessRunning, RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="{localization:LocalizationService Key='GET_STARTED'}"
                    Command="{Binding Path=((vm:MainViewModel)DataContext).GoToHomeCommand, RelativeSource={RelativeSource AncestorType=Window}}">                
            </Button>
            <TextBlock
                Text="{Binding Path=((vm:MainViewModel)DataContext).OllamaProcessMessage, RelativeSource={RelativeSource AncestorType=Window}}"
                FontSize="14"
                TextAlignment="Center"
                Margin="0,60,0,0"
                Foreground="{Binding Path=((vm:MainViewModel)DataContext).ProcessColor, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>


        <TextBlock Text="{localization:LocalizationService Key='VERSION'}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="10"
                   Opacity="0.6" />
    </Grid>
</UserControl>
