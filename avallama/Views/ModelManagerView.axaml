<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:services="clr-namespace:avallama.Services"
             xmlns:vm="using:avallama.ViewModels"
             xmlns:controls="clr-namespace:avallama.Controls"
             xmlns:models="clr-namespace:avallama.Models"
             xmlns:converters="clr-namespace:avallama.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avallama.Views.ModelManagerView"
             x:DataType="vm:ModelManagerViewModel"
             Background="{DynamicResource Surface}">

    <UserControl.Resources>
        <converters:SortingOptionConverter x:Key="SortingOptionConverter" />
    </UserControl.Resources>

    <!-- ha az első oszlopot autora állítod akkor exceptiont kapsz, valszeg mert még nem tudja jól megmérni magát a modelblock control arra az esetre -->
    <Grid Margin="22" RowDefinitions="Auto,*,Auto">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="225" MaxWidth="400" />
            <ColumnDefinition Width="22" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="PageTitle" Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="6"
                    HorizontalAlignment="Left" Margin="0,0,0,20">
            <TextBlock
                Text="{services:LocalizationService Key='MODEL_MANAGER'}" Classes="H1"
                Foreground="{DynamicResource OnSurface}" VerticalAlignment="Center" />
            <Button Command="{Binding ShowInfo}" Classes="svgButton">
                <controls:DynamicSvg Path="/Assets/Svg/info.svg" FillColor="{DynamicResource OnSurfaceVariant}"
                                     Width="20" VerticalAlignment="Center" />
            </Button>
        </StackPanel>

        <!-- Bal oldali modelválasztó, kereső, rendező rész -->
        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,Auto,*" HorizontalAlignment="Stretch">

            <!-- Keresőmező -->
            <TextBox Grid.Row="0" Watermark="{services:LocalizationService Key='SEARCH_FOR_MODELS'}" MaxLines="1"
                     Padding="16,8"
                     HorizontalAlignment="Stretch" Text="{Binding SearchBoxText}"
                     VerticalAlignment="Stretch">
                <TextBox.InnerRightContent>
                    <controls:DynamicSvg Path="/Assets/Svg/search.svg" Width="16"
                                         Margin="0,0,12,1" StrokeColor="{DynamicResource OnSurfaceVariant}" />
                </TextBox.InnerRightContent>
            </TextBox>

            <!-- Rendező szöveg és rendező combobox -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Margin="0,12,0,0" HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <TextBlock Grid.Column="0"
                           Text="{services:LocalizationService Key='SORT_BY'}"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="{DynamicResource OnSurface}"
                           FontWeight="Bold" />
                <ComboBox Grid.Column="1" Margin="8,0,0,0"
                          SelectedIndex="1"
                          HorizontalAlignment="Stretch"
                          Classes="sorting"
                          ItemsSource="{Binding SortingOptions}"
                          SelectedItem="{Binding Path=SelectedSortingOption, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource SortingOptionConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!-- "Nincs megjeleníthető model" svg és szöveg -->
            <StackPanel Grid.Row="2" Orientation="Vertical" IsVisible="{Binding !HasModelsToDisplay}"
                        Spacing="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <controls:DynamicSvg Path="/Assets/Svg/sad.svg" Height="120" FillColor="{DynamicResource Primary}" />

                <TextBlock Text="{services:LocalizationService Key='NO_MODELS_FOUND'}"
                           HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                           FontSize="16" TextWrapping="Wrap" Foreground="{DynamicResource Primary}"
                           TextAlignment="Center" />
            </StackPanel>

            <!-- Modelválasztó -->
            <ScrollViewer Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,14,0,0"
                          AllowAutoHide="True">
                <ItemsControl ItemsSource="{Binding Models}" VerticalAlignment="Stretch">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:OllamaModel">
                            <controls:ModelBlock
                                Margin="0,12,0,0"
                                Title="{Binding Name}"
                                DownloadStatus="{Binding DownloadStatus}"
                                SizeInBytes="{Binding Size}"
                                DownloadedBytes="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=((vm:ModelManagerViewModel)DataContext).DownloadedBytes}"
                                SelectedName="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=((vm:ModelManagerViewModel)DataContext).SelectedModelName}"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=((vm:ModelManagerViewModel)DataContext).SelectModel}"
                                CommandParameter="{Binding Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <GridSplitter Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Opacity="0" ResizeDirection="Columns"
                      Margin="4,0,4,0" />

        <!-- valszeg itt lehetne az is hogy csak simán átadom az egész példányt bindingra, de egyelőre most külön vettem a propertyket -->
        <!-- sír axaml hogy nincs fallback value de am le van kezelve minden null érték controlban -->
        <controls:ModelInfoBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                                 IsVisible="{Binding HasModelsToDisplay}"
                                 Title="{Binding SelectedModel.Name}"
                                 Quantization="{Binding SelectedModel.Quantization}"
                                 Parameters="{Binding SelectedModel.Parameters}"
                                 Format="{Binding SelectedModel.Format}"
                                 DetailItemsSource="{Binding SelectedModel.Details}"
                                 SizeInBytes="{Binding SelectedModel.Size}"
                                 DownloadStatus="{Binding SelectedModel.DownloadStatus}"
                                 DownloadSpeed="{Binding DownloadSpeed}"
                                 DownloadedBytes="{Binding DownloadedBytes}"
                                 RunsSlow="{Binding SelectedModel.RunsSlow}"
                                 Command="{Binding ModelAction}" />

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Margin="0,22,0,0"
                   IsVisible="{Binding HasDownloadedModels}"
                   Text="{Binding DownloadedModelsInfo}"
                   Classes="H3" VerticalAlignment="Center" HorizontalAlignment="Left" Opacity="0.6"
                   Foreground="{DynamicResource OnSurfaceVariant}" />

        <Button Grid.Column="3" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,22,0,0"
                Content="{services:LocalizationService Key='BACK'}"
                Command="{Binding Path=((vm:MainViewModel)DataContext).OpenHome, RelativeSource={RelativeSource AncestorType=Window}}"
                Cursor="Hand" />
    </Grid>
</UserControl>